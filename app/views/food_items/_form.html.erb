<%= simple_form_for(@food_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :section %>
    <%= f.input :image_url %>

    <%= f.input :image, as: :file %>
</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
